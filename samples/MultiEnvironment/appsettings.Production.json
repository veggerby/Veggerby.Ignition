{
  "Ignition": {
    "Policy": "FailFast",
    "ExecutionMode": "Parallel",
    "GlobalTimeout": "00:01:00",
    "CancelOnGlobalTimeout": true,
    "CancelIndividualOnTimeout": true,
    "EnableTracing": false,
    "MaxDegreeOfParallelism": 4,
    "Timeouts": {
      "Database": "00:00:20",
      "ExternalApi": "00:00:15",
      "CacheWarmup": "00:00:30"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Veggerby.Ignition": "Information"
    }
  }
}
